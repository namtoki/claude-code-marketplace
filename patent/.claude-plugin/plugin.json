{
  "name": "patent-assistant",
  "version": "1.0.0",
  "description": "Japanese patent law knowledge repository and invention creation workflow",
  "commands": "./commands/",
  "agents": "./agents/",
  "skills": "./skills/",
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "patent_mcp_server": {
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/start-patent-mcp.sh",
      "env": {
        "USPTO_API_KEY": "${USPTO_API_KEY}"
      }
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup.sh"
          }
        ]
      }
    ]
  },
  "author": {
    "name": "namtoki",
    "url": "https://github.com/namtoki"
  },
  "license": "MIT",
  "repository": "https://github.com/namtoki/claude-code-marketplace",
  "keywords": ["patent", "japanese-law", "invention", "ip", "claude-code"]
}
